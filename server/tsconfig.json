{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES2020",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "allowJs": true  
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}