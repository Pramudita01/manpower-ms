{
  "name": "manpower-ms-root",
  "version": "1.0.0",
  "description": "Scalable Monorepo for Manpower Management System (Next.js + Node/Express)",
  "private": true,
  "scripts": {
    "dev:client": "pnpm --filter client dev",
    "dev:server": "pnpm --filter server dev",
    "dev": "pnpm --parallel --filter ./... dev",
    "build:client": "pnpm --filter client build",
    "build:server": "pnpm --filter server build",
    "build": "pnpm build:client && pnpm build:server",
    "start:server": "pnpm --filter server start",
    "start:client": "pnpm --filter client start"
  },
  "packageManager": "pnpm@9.1.4"
}